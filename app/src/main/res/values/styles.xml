<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <!--<item name="colorPrimary">#d4a71b</item>-->
        <!--<item name="coloPrimary">#fff400</item>-->
        <!--<item name="colorPrimaryDark">#b08a14</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="CalculatorTitleTheme" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">#FFFFFF</item>
        <!--<item name="android:background">#d4a71b</item>-->
        <item name="android:background">#8a2be2</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="CalculatorTableStyle" parent="@android:style/TextAppearance.Widget">
        <!-- make similar to the tables from the website, i.e. hard dark lines,
        maybe choose a different color background. -->
    </style>
    <style name="OutputTextStyle" >
        <item name="android:textColor">#670067</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <style name="OutputLabelStyle">
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <style name="RadioStyle">
        <item name="android:color">#ee82b8</item>
    </style>
</resources>
